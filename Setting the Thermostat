import requests

def update_thermostat_profile(access_token, host, profile_id, schedules):
    url = f"http://{host}/schedule-profile/{profile_id}"
    headers = {
        "Content-Type": "application/json",
        "Authorization": f"Bearer {access_token}"
    }
    body = {
        "schedules": schedules
    }
    response = requests.patch(url, json=body, headers=headers)
    return response.json()

# Example usage
access_token = "your_access_token_here"
host = "api.mclimate.eu"
profile_id = "25"
schedules = [{
    "days": "1000000",
    "active": 1,
    "from_time": 120,
    "to_time": 420,
    "device_hours": 11,
    "action": "command",
    "target": 22,
    "push": 1
}]
response = update_thermostat_profile(access_token, host, profile_id, schedules)
print(response)
