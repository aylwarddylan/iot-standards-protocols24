def set_thermostat(room_id, temperature, api_url):
    data = {
        "room_id": room_id,
        "temperature": temperature
    }
    try:
        response = requests.post(api_url, json=data)
        response.raise_for_status()
        print(f"Thermostat set for room {room_id} to {temperature}Â°C")
    except requests.RequestException as e:
        print(f"Failed to set thermostat for room {room_id}: {e}")
